<!--    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>-->
<!--    <aura:handler event="c:objectTransfer" action="{!c.onArticleSelect}"/>-->

    <lightning:layout multipleRows="true" class="slds-align_absolute-center">
