<aura:component description="ES_ProductSearchResults"
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction"
                access="global" controller="ES_ProductSearchController">

    <aura:attribute name="selectedProducts" type="Product2[]"/>
    <aura:attribute name="selectedArticle" type="Object"/>
    <aura:attribute name="requestData" type="Object"/>
    <aura:attribute name="searchParams" type="Object"/>

    <aura:attribute name="showSpinner" type="Boolean" default="false"/>

    <aura:handler name="change" value="{!v.requestData}" action="{!c.dataChange}"/>
