            <aura:iteration items="{!v.selectedProducts}" var="product">
                <c:ES_ProductTile product="{!product}" searchParams="{!v.requestData}"/>
            </aura:iteration>
<!--            <aura:set attribute="else">-->
<!--                <div class="slds-align_absolute-center slds-box slds-theme_default slds-large-size_1-of-1">-->
<!--                    <lightning:layoutItem padding="around-small">-->
<!--                        <ui:outputText value="No product found"/>-->
<!--                    </lightning:layoutItem>-->
<!--                </div>-->
<!--            </aura:set>-->
<!--        </aura:if>-->
    </lightning:layout>
    <c:Spinner isVisible="{!v.showSpinner}"/>
</aura:component>
