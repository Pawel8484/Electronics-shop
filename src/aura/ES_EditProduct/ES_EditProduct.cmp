<aura:component description="ES_EditProduct" implements="force:appHostable,flexipage:availableForAllPageTypes,lightning:isUrlAddressable,force:lightningQuickActionWithoutHeader"
                controller="ES_ProductController">

    <aura:attribute type="String" name="recordId" default=""/>
    <aura:attribute type="String" name="standardPrice"/>
    <aura:attribute type="String" name="isUpdated" default="true"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>

    <c:ES_CreateNewProduct recordId="{!v.recordId}" standardPrice="{!v.standardPrice}" isUpdated="{!v.isUpdated}"/>
</aura:component>
