<aura:component description="ES_ProductSearchForm"
                implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId"
                access="global">

    <aura:attribute name="options" type="List" default="[
    {'label': 'all', 'value': 'all'},
    {'label': 'Mobile Phone', 'value': 'phone'},
    {'label': 'Laptop', 'value': 'laptop'},
    ]"/>

    <aura:attribute name="initialData" type="Object" default="{}"/>
    <aura:attribute name="searchInput" type="String"/>
    <aura:attribute name="selectedCategory" type="String"/>
    <aura:attribute name="selectedStartDate" type="String"/>
    <aura:attribute name="selectedEndDate" type="String"/>

    <aura:registerEvent name="requestData" type="c:ES_RequestData"/>

    <lightning:card class="slds-p-horizontal_medium">
        <lightning:layout horizontalAlign="center" verticalAlign="center">
            <lightning:layoutItem size="3">
                <img class="logo" src="{!$Resource.shop_logo}"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="3" class="searchbox">
                <lightning:input name="searchInput" aura:id="searchInput" placeholder="Keywords..."/>
            </lightning:layoutItem>
            <lightning:layoutItem size="1" class="searchbox">
                <lightning:combobox name="selectedCategory" aura:id="selectedCategory"
                                    value="Select category..."
                                    placeholder="Category"
                                    options="{! v.options }"/>
            </lightning:layoutItem>
            <lightning:layoutItem>
                <lightning:button variant="brand" iconName="utility:search" onclick="{!c.onFormSubmit}"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="4">
            </lightning:layoutItem>
        </lightning:layout>
        <br/>
    </lightning:card>
</aura:component>
